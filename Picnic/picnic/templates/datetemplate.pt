<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" xmlns:tal="http://xml.zope.org/namespaces/tal">
<head>
  <title>${pagename} -- Full Month view</title>
  <meta http-equiv="Content-Type" content="text/html;charset=UTF-8"/>
  <meta name="keywords" content="python web application" />
  <meta name="description" content="pyramid web application" />
</head>
<body>
<div id="wrap">
  <table align="center"><tbody>
    <tr>
      <td align="left" width="150"><a href="${prevlink}" tal:condition="prevlink">Previous</a></td>
      <td align="center" width="500">${pagename}<BR>${pagedesc}</td>
      <td align="right" width="150"><a href="${nextlink}" tal:condition="nextlink">Next</a></td>
    </tr>
    <tr>
      <td></td>
      <td align="center">
        <table><tbody>
          <tr>
            <td>
              Entire Month:
            </td>
            <td>
              <form name="Multi-View" action="${newmonthform}">
              <input type="hidden" name="type" value="all"/>
              <input type="hidden" name="day" value="${thistime.day}"/>
              <input type="hidden" name="month" value="${thistime.month}"/>
              <input type="hidden" name="year" value="${thistime.year}"/>
              <input type="hidden" name="accessby" value="${methodtype}"/>
              <input type="hidden" name="accessto" value="${methodkey}"/>
              <input type="submit" value="Multi-View"/>
              </form>
            </td>
            <td tal:repeat="cal caltypes">
              <form name="${cal.name}" action="${newmonthform}">
              <input type="hidden" name="type" value="${cal.prefix}"/>
              <input type="hidden" name="day" value="${thistime.day}"/>
              <input type="hidden" name="month" value="${thistime.month}"/>
              <input type="hidden" name="year" value="${thistime.year}"/>
              <input type="hidden" name="accessby" value="${methodtype}"/>
              <input type="hidden" name="accessto" value="${methodkey}"/>
              <input type="submit" value="${cal.name}"/>
              </form>
            </td>
          </tr>
        </tbody></table>
      </td>
    </tr>
    <tr>
      <td></td>
      <td align="center">
        <a href="${request.route_path('home')}">Return to Data Portal</a>
      </td>
    </tr>
    <tr>
      <td></td>
      <td align="center">
        <table><tbody>
          <td>
            <tr tal:repeat="formbutton redirectbuttons">
              <form name="${formbutton.submit}" action="${formbutton.url}" method="get">
              <input type="hidden" tal:repeat="forminput formbutton.inputs" tal:attributes="name forminput.name;value forminput.value"/>
              <input type="submit" value="${formbutton.submit}" />
              </form>
            </tr>
          </td>
        </tbody></table>
      </td>
    </tr>
    <tr><td colspan="3">
      <table cellspacing="3">
        <tbody>
          <tr tal:repeat="entry entries">
            <td>
              <a tal:attributes="href entry.calurl"><img tal:attributes="src entry.imageurl"></a>
            </td>
          </tr>
        </tbody>
      </table>
    </td></tr>
  </tbody></table>
</div>
</body>
</html>
